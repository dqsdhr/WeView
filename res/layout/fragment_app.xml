<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_app"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/imageView_title"
        android:paddingTop="2dp"
        android:src="@drawable/logo_bj" />
	
    <TextView 
        android:id="@+id/textView_cemara1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cemara1"/>
    
    <VideoView
        android:id="@+id/videoView_cemara1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="@dimen/activity_vertical_margin"
        android:paddingTop="2dp" />

</LinearLayout>